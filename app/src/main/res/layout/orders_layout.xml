<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/order_User_name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:text="@string/user_name"
                android:textColor="@color/ColorTextDark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/orders_phoneNumber_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_01092939844"
                    android:textColor="@color/ColorTextDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:gravity="fill|center">

                    <TextView
                        android:id="@+id/orders_total_price_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="fill"
                        android:text="@string/_500"
                        android:textColor="@color/ColorTextSkip"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="fill"
                        android:text="@string/egp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/ColorTextDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/order_home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:text="@string/egypt_aswan"
                android:textColor="@color/ColorTextDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:text="@string/_1_31_2021_12_00"
                android:textColor="@color/ColorTextDark"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:text=""
                android:textColor="@color/ColorTextDark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/show_all_product_btn"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:text="@string/show"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_back"
            android:textColor="@color/ColorTextDark"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>