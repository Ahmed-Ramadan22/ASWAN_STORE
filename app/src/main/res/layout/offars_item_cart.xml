<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/offers_cart_img_product"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:padding="2dp"
                android:layout_gravity="start|center"
                android:layout_marginStart="8dp"
                android:background="#EAE9E9"
                android:src="@drawable/as_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/offers_name_cart_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill"
                    android:layout_marginTop="7dp"
                    android:text="@string/product_name"
                    android:textColor="@color/ColorTextDark"
                    android:textSize="19sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/offers_price_cart_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="fill"
                        android:text=""
                        android:textColor="@color/ColorTextSkip"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="fill"
                        android:text="@string/egp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/ColorTextDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/offers_product_txt_des"
                    android:text="@string/product_description"
                    android:gravity="fill"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/ColorTextDarksows"
                    android:maxLines="1" />


            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>