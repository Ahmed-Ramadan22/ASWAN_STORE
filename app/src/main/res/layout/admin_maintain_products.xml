<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="13dp"
    tools:context=".Admin.Ui.AdminMaintainProducts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_maintain"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/beauty"
            android:layout_marginTop="2dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/product_name_maintain"
            android:hint="@string/product_name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/ColorTextDarksows"
            android:maxLines="1"
            android:gravity="center"
            android:background="@drawable/edit_txt_bag"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/product_price_maintain"
                    android:hint="@string/_500"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:background="@drawable/edit_txt_bag"
                    android:textColor="@color/ColorTextDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill"
                    android:text="@string/egp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/ColorTextDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/product_description_maintain"
            android:hint="@string/product_description"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/ColorTextDarksows"
            android:gravity="fill|center"
            android:background="@drawable/edit_txt_bag"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="18dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/updateChange_maintain_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:clickable="true"
                    android:focusable="true"
                    android:shadowColor="@color/ColorTextDark"
                    android:text="@string/apply_changes"
                    android:textColor="#113771"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

                <ProgressBar
                    android:layout_width="38sp"
                    android:layout_height="38dp"
                    android:id="@+id/progressBar_addPro"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/deleteProduct_maintain_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_back"
                    android:clickable="true"
                    android:focusable="true"
                    android:shadowColor="@color/ColorTextDark"
                    android:text="@string/delete_product"
                    android:textColor="#113771"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"/>

                <ProgressBar
                    android:layout_width="38sp"
                    android:layout_height="38dp"
                    android:id="@+id/progressBar_delete"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>